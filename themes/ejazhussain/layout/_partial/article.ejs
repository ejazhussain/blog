<%- partial('_partial/hero',{post: post}) %>

	<section class="section article-section">

		<div class="container article-container">
			<div class="article-main columns">
				<!--article-->
				<div class="article-content column is-9">

					<div class="post-content content">
						<figure>
						<% if (post.featured_image){ %>
							<img src="<%- post.featured_image %>">
							<% } %>
						</figure>
								<%- post.content %>
					</div>
					<% if (post.comments && config.disqus_shortname){ %>
						<section id="comments">
							<div id="disqus_thread"></div>
						</section>
						<% } %>
				</div>
				<!--sidebar-->
				<aside class="column is-3 article-aside is-narrow-mobile is-fullheight section is-hidden-mobile">
					<%- partial('post/toc') %>
				</aside>
			</div>
		</div>
	</section>
	<script>		
		window.subData = {
			title: '<%= post.title %>',
			tools: true
		}
	</script>