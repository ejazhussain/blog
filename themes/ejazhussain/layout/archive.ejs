

    <section class="hero is-primary hero-root">
            <div class="hero-body">
                <div class="container">
                    <h1 class="title">
                        Archives
                    </h1>
                    <h2 class="subtitle">                            
                    </h2>
                </div>
            </div>
 </section>

<section class="section archive-section">

        <div class="container container-archive main-container">

                <div id="main">
                    <div class="timebox">
                         <div class="timeline">
                             <ul>
                               <% var years; %>
                               <% site.posts.sort('date','desc').each(function(post){ %>
                                   <%
                                      var year = post.date.year();
                                      var month = post.date.format('MM');
                                      var months = (~~month != ~~page.month)? 'hide' : ''
                                   %>
                                   <% if((!!page.year && page.year == year) || !page.year) { %>
                                       <% if (years != year) { %>
                                           <% years = year; %>
                                           <h2><%= year %></h2>
                                       <% } %>
                                       <% if(page.month) { %>
                                         <li class="<%= months %>">
                                       <% } else { %>
                                         <li>
                                       <% } %>
                                           <h3>
                                             <!-- <%= post.date.format('DD') %><span><%= post.date.format('MM') %></span> -->
                                             <time><%= date(post.date, 'DD-MM') %></time>
                                           </h3>
                                           <a href="<%- url_for(post.path) %>" title="<%- post.title %>"><%- post.title %></a>
                                       </li>
                                   <% } %>
                               <% }) %>
                             </ul>
                         </div>
                   </div>
                </div>
            </div>

</section>


